<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp">

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textViewListProdutosNome"
        android:layout_toEndOf="@+id/textViewListProdutosQuantidade"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="10dp"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textViewListProdutosNome"
        android:layout_toEndOf="@+id/textViewListProdutosGrupo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/imagem_redonda"/>

    <TextView
        android:id="@+id/textViewListProdutosNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginStart="84dp"
        android:text="Leite em PÃ³ Piracamjuba"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewListProdutosGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewListProdutosPreco"
        android:layout_below="@+id/textViewListProdutosNome"
        android:layout_marginStart="84dp"
        android:textSize="15dp"
        android:text="Laticinios" />

    <TextView
        android:id="@+id/textViewListProdutosQuantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewListProdutosNome"
        android:layout_alignStart="@+id/divider2"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:text="120 Und"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewListProdutosPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/divider"
        android:layout_below="@+id/textViewListProdutosNome"
        android:text="R$120,00"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewListProdutoCodigo"
        style="bold"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-condensed"
        android:text="0001"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28dp" />

</RelativeLayout>