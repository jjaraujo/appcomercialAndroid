<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d7d7d7">

    <TextView
        android:id="@+id/textViewHistoricoClienteVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Vendedor: 01 - João maria Furtado Araujo Junior"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewHistoricoClienteVendedor"
        android:layout_marginTop="10dp"
        android:background="#696969" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewHistoricoClienteData"
        android:layout_alignStart="@+id/textViewHistoricoClienteData"
        android:text="Data" />

    <TextView
        android:id="@+id/textViewHistoricoClienteData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewHistoricoClienteNumero"
        android:layout_toEndOf="@+id/textViewHistoricoClienteNumero"
        android:layout_marginStart="40dp"
        android:text="25/10/2017"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewHistoricoClienteData"
        android:layout_alignStart="@+id/textViewHistoricoClienteValor"
        android:text="Valor" />

    <TextView
        android:id="@+id/textViewHistoricoClienteValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewHistoricoClienteData"
        android:layout_toEndOf="@+id/textViewHistoricoClienteData"
        android:layout_marginStart="40dp"
        android:text="R$2400,00"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewHistoricoClienteData"
        android:layout_alignStart="@+id/textViewHistoricoClienteNumero"
        android:text="Nº" />

    <TextView
        android:id="@+id/textViewHistoricoClienteNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="102dp"
        android:text="00001"
        android:textSize="20dp" />


</RelativeLayout>