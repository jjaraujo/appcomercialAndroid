<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewPagamentoEscolhidoDeletar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/imageViewIconePagamentoEscolhido"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/textViewPagamentoEscolhidoTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="21dp"
        android:text="Nome tipo" />

    <TextView
        android:id="@+id/textViewPagamentoEscolhidoParcelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewPagamentoEscolhidoTipo"
        android:layout_toEndOf="@+id/textViewPagamentoEscolhidoTipo"
        android:layout_marginStart="50dp"
        android:text="Parcela x" />

    <ImageView
        android:id="@+id/imageViewIconePagamentoEscolhido"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>