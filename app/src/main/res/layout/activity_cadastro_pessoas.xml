<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.activitys.entidades.pessoas.CadastroPessoasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCadastroNomeRSocial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Nome">

                <EditText
                    android:id="@+id/cadastroNomeRSocial"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCadastroCpfCnpj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/inputLayoutCadastroNomeRSocial"
                android:hint="CPF">

                <EditText
                    android:id="@+id/cadastroCpfCnpj"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCadastroRgIe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/inputLayoutCadastroCpfCnpj"
                android:hint="RG">

                <EditText
                    android:id="@+id/cadastroRgIe"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <Spinner
                android:id="@+id/cadastroSexo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:hint="Sexo" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCadastroNascimento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/inputLayoutCadastroRgIe"
                android:layout_marginRight="1dp"
                android:hint="Nacimento">

                <EditText
                    android:id="@+id/cadastroNascimento"
                    android:layout_width="227dp"
                    android:layout_height="50dp"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCadastroLogradouro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Logradouro">

                <EditText
                    android:id="@+id/cadastroLogradouro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textLayoutCadastroBairro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/inputLayoutCadastroLogradouro"
                android:hint="Bairro">

                <EditText
                    android:id="@+id/cadastroBairro"
                    android:layout_width="279dp"
                    android:layout_height="50dp"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCadastroNumeroEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/inputLayoutCadastroLogradouro"
                android:hint="NÃºmero">

                <EditText
                    android:id="@+id/cadastroNumeroEndereco"
                    android:layout_width="108dp"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textLayoutCadastroCep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textLayoutCadastroBairro"
                android:hint="Cep">

                <EditText
                    android:id="@+id/cadastroCep"
                    android:layout_width="219dp"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


            <Spinner
                android:id="@+id/cadastroEstado"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textLayoutCadastroBairro"
                android:hint="Estado" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textLayoutCadastroMunicipio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/cadastroEstado"
                android:hint="Municipio">

                <AutoCompleteTextView
                    android:id="@+id/cadastroMunicipio"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textLayoutCadastroTelefone1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Telefone 1">

                <EditText
                    android:id="@+id/cadastroTelefone1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textLayoutCadastroTelefone2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textLayoutCadastroTelefone1"
                android:hint="Telefone 2">

                <EditText
                    android:id="@+id/cadastroTelefone2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textLayoutCadastroEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textLayoutCadastroTelefone2"
                android:hint="Email">

                <EditText
                    android:id="@+id/cadastroEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/buttonSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textLayoutCadastroEmail"
                android:text="Salvar" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>