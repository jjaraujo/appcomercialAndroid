<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_caixa"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:text="Movimento Geral"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/textViewCaixaFixoAVista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="À vista"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textViewCaixaValorAVista"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:background="@drawable/view_bordas_redonda"
                android:text="R$150,57"
                android:textAlignment="center"
                android:textColor="@color/corTextViewTexto"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textViewCaixaValorAPrazo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewCaixaValorAPrazo"
                app:layout_constraintTop_toTopOf="@+id/textViewCaixaFixoAVista" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="À prazo"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/textViewCaixaFixoAVista"
                app:layout_constraintTop_toBottomOf="@+id/textViewCaixaValorAVista" />

            <TextView
                android:id="@+id/textViewCaixaValorAPrazo"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/view_bordas_redonda"
                android:text="R$457,29"
                android:textAlignment="center"
                android:textColor="@color/corTextViewTexto"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_goneMarginStart="30dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Total"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textViewCaixaValorAPrazo" />

            <TextView
                android:id="@+id/textViewCaixaValorTotal"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/view_bordas_redonda"
                android:text="R$726,99"
                android:textAlignment="center"
                android:textColor="@color/corTextViewTexto"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textViewCaixaValorAPrazo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textViewCaixaValorAPrazo"
                app:layout_constraintTop_toTopOf="@+id/textView7" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/divider8"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/mdtp_transparent_black"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_marginTop="272dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movimento da Gaveta"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />
        </android.support.constraint.ConstraintLayout>
        

    </android.support.constraint.ConstraintLayout>


    <!-- -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />


</android.support.v4.widget.DrawerLayout>
