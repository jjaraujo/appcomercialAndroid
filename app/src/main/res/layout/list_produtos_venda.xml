<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listProdutosVendaTextViewNomeProduto"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:text="Poduto"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:scrollbarSize="180dp"/>

    <TextView
        android:id="@+id/listProdutosVendaTextViewQuantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listProdutosVendaTextViewNomeProduto"
        android:layout_toStartOf="@+id/listProdutosVendaTextViewTotal"
        android:text="Quantidade"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/listProdutosVendaTextViewTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listProdutosVendaTextViewNomeProduto"
        android:layout_toStartOf="@+id/listProdutosVendaImageViewDelete"
        android:text="Total"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="48dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/listProdutosVendaImageViewDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/listProdutosVendaTextViewNomeProduto"
        android:layout_marginEnd="15dp"
        app:srcCompat="@android:drawable/ic_delete" />

</RelativeLayout>