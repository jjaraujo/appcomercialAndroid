<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editTexDesconto"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="57dp" />

    <Button
        android:id="@+id/buttonDescontoSomar"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/buttonAdicionarDesconto"
        android:layout_centerVertical="true"
        android:text="+" />

    <Button
        android:id="@+id/buttonDescontoSubtrair"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="-"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonAdicionarDesconto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Adicionar" />

    <RadioGroup
        android:id="@+id/radioGroupDesconto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20dp">

        <RadioButton
            android:id="@+id/radioButtonDescontoDinheiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$" />

        <RadioButton
            android:id="@+id/radioButtonDescontPercentual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="%" />
    </RadioGroup>

</RelativeLayout>