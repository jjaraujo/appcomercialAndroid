<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.jmdesenvolvimento.appcomercial">

    <uses-sdk android:minSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activitys.entidades.pessoas.CadastroClientesActivity" />
        <activity android:name=".view.activitys.entidades.pessoas.CadastroEmpresaActivity" />
        <activity android:name=".view.activitys.entidades.pessoas.CadastroFuncionarioActivity" />
        <activity android:name=".view.activitys.entidades.pessoas.CadastroFornecedoresActivity" />
        <activity
            android:name=".view.activitys.iniciais.VendasAbertasActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activitys.entidades.estoque.EstoqueActivity"
            android:label="@string/title_activity_estoque"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activitys.entidades.estoque.CadastroProdutoActivity" />
        <activity android:name=".view.activitys.entidades.contas.CadastroContasPagarActivity" />
        <activity android:name=".view.activitys.configuracoes.ConfiguracoesActivity" />
        <activity android:name=".view.activitys.configuracoes.ConfigurarPagamentosActivity" />
        <activity
            android:name=".view.activitys.entidades.pessoas.PessoasActivity"
            android:label="@string/title_activity_pessoas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activitys.entidades.contas.ContasActivity"
            android:label="@string/title_activity_contas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activitys.LeitorCodigoBarrasActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".view.activitys.entidades.PagamentoDaVendaActivity" />
        <activity android:name=".view.activitys.entidades.contas.ContaReceberActivity" />
        <activity
            android:name=".view.activitys.ProdutosVendaActivity"
            android:label="@string/title_activity_produtos_venda"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activitys.iniciais.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".view.activitys.HistoricoClienteActivity" />
        <activity android:name=".view.activitys.iniciais.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activitys.iniciais.CaixaActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".controller.firebase.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".controller.firebase.RecebeMensagensService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".view.activitys.configuracoes.ConfigurarCaixaActivity"></activity>
    </application>

</manifest>